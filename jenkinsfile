pipeline {
    agent any  // Utiliser l'agent Jenkins gÃ©nÃ©rique
    stages {
        stage('Install dependencies') {
            agent {
                docker { image 'node:18' }
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Unit Test') {
            agent {
                docker { image 'node:18' }
            }
            steps {
                sh 'npm test'
            }
        }
        stage('Build application') {
            agent {
                docker { image 'node:18' }
            }
            steps {
                sh 'npm run build-dev'
            }
        }
    }
}
